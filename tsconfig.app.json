{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"src/env.d.ts",
		"src/**/*",
		"src/**/*.vue"
	],
	"exclude": [
		"src/**/__tests__/*"
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"esModuleInterop": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"verbatimModuleSyntax": false,
		"isolatedModules": true,
		"noImplicitAny": false,
		// "resolvePackageJsonExports": false
		"composite": true,
		"outDir": "dist",
		"declarationDir": "types",
		"allowJs": true,
		"baseUrl": ".",
		"rootDir": "src",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	}
}
